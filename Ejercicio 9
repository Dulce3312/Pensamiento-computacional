'''
#Ejercicio 5
def suma_hasta(n):
    if n == 1:
        return 1 
    else: 
        return n + suma_hasta(n-1)
resultado = suma_hasta(4)
print(resultado)
'''
'''
#Ejercicio 6 
def suma_hasta(n):
    if n == 1 or n == 0:
        return 1 
    else: 
        return n * suma_hasta(n-1)
resultado = suma_hasta(5)
print(resultado)
